<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- activity layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- wiki content trigger timeline (video trigger-points) -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.15"
            android:text="TIMELINE" />

        <!-- specific wiki content (card view) -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wikiImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="0.20"
                    android:src="@drawable/wiki_kaiserpinguin"/>

                <TextView
                    android:id="@+id/currentWikiTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:paddingHorizontal="15dp"
                    android:layout_weight="0.1"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/currentWikiExtract"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="15dp"
                    android:layout_weight="0.70"
                    android:textSize="14dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/buttonInformationNext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="[Weiter zu Quiz Activity]"
            android:layout_weight="0.10"
            android:gravity="right" />

        <!-- video controller (play, pause, etc.) -->
        <TextView
            android:id="@+id/remoteController"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:gravity="center"
            android:text="VIDEO REMOTE CONTROLLER" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>