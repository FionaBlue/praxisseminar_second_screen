<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:ignore="ExtraText"
    android:orientation="vertical"
    android:padding="3dip">

    <TableRow
        android:id="@+id/category_rotary"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category_chevron_left"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_chevron_left_grey_24dp" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@color/colorAntarktis"
                card_view:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/continent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Antarktis"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/category_chevron_right"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_chevron_right_grey_24dp" />

        </LinearLayout>
    </TableRow>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="3dip"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dip">
            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/thumbnailview1"
                android:layout_width="200dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/titleView1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:text="Superwunder der Natur"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/lengthView1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="28:59"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
        </TableRow>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="3dip"
        android:layout_marginBottom="3dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dip">
            <com.google.android.youtube.player.YouTubeThumbnailView
                android:id="@+id/thumbnailview2"
                android:layout_width="200dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/titleView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Die Orcas der Antarktis" />
                <TextView
                    android:id="@+id/lengthView2"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="42:44"
                    android:textColor="@color/colorGrey"/>
            </LinearLayout>
        </TableRow>
    </android.support.v7.widget.CardView>
</LinearLayout>