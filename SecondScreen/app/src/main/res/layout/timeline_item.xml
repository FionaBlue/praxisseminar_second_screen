<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <!-- timeline item -->
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- timeline item image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:id="@+id/timelineItem"
            android:src="@drawable/placeholder"/>

        <!-- timeline item divider -->
        <View
            android:id="@+id/timelineItemDivider"
            android:layout_width="26dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/timelineItem"
            android:background="@drawable/timeline_item_divider"
            android:layerType="software"/>

    </RelativeLayout>

    <!-- timestamp -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timelineItemTimestamp"
        android:text="@string/timestamp_placeholder"
        android:textColor="#bdbdbd"
        android:layout_marginRight="12dp"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

